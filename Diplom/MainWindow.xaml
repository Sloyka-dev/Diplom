<Window x:Class="Diplom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button
            x:Name="SupportButton"
            Grid.Row="0"
            Grid.Column="2"
            FontSize="14"
            FontWeight="Black"
            Margin="7">
            Техническая поддержка
        </Button>

        <Label
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="5"
            FontSize="14"
            FontWeight="Black">
            Поиск:
        </Label>

        <TextBox
            x:Name="SearchText"
            Grid.Row="1"
            Grid.Column="1"
            VerticalAlignment="Center"
            Margin="5"
            Padding="3"
            FontSize="14"
            FontWeight="Black"/>

        <Button
            x:Name="SearchButton"
            Grid.Row="1"
            Grid.Column="2"
            Padding="25 10"
            FontSize="14"
            FontWeight="Black"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            Искать
        </Button>

        <ListView
            x:Name="DataListView"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            HorizontalContentAlignment="Stretch">
            
            
            
        </ListView>
        
    </Grid>
</Window>
